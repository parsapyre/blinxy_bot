import os
from telegram.ext import ApplicationBuilder, MessageHandler, CommandHandler, filters

TOKEN = os.environ["8415423178:AAFr9yxpr5rWAD_Gq2UR_i5IAGn75r5a_eA"]

async def start(update, context):
    await update.message.reply_text("سلام خراب منو بلینکسی صدا کن :)")

async def mention_reply(update, context):
    bot_username = (await context.bot.get_me()).username
    if f"@{bot_username}" in update.message.text:
        await update.message.reply_text(" چیه مشتی؟")

if __name__ == '__main__':
    app = ApplicationBuilder().token(TOKEN).build()
    app.add_handler(CommandHandler("start", start))
    app.add_handler(MessageHandler(filters.TEXT & ~filters.COMMAND, mention_reply))
    app.run_polling()
